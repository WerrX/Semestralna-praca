<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:layout_gravity="center"
        tools:context=".streach.StreachUpperBodyFragment">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:id="@+id/id_firstCardView"
                    android:layout_width="365dp"
                    android:layout_height="600dp"

                    android:layout_margin="16dp"
                    app:cardElevation="8dp">


                    <TextView
                        android:id="@+id/id_calvesAndHamsting"
                        android:text="@string/spine_streach"
                        android:contentDescription="@string/name_of_streaching_exercise"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:visibility="visible"

                        />

                    <ImageView
                        android:id="@+id/id_ImgVfirstStreach"
                        android:src="@drawable/spinestreach"
                        android:contentDescription="@string/foto_of_streaching_exercise_child_pose"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_margin="30dp"
                        />

                    <TextView
                        android:id="@+id/idTxtVChieldStreach"
                        android:text="@string/spine_streach_is_not_a_move_that_strengthens_your_muscles_this_means_that_it_s_not_meant_to_push_or_build_any_muscles_instead_it_s_a_stretch_that_focuses_on_lengthening_your_spine_opening_your_hips_and_stretching_your_thighs_trapezius_muscles_the_trapezius_muscles_are_the_two_large_muscles_in_your_back"
                        android:layout_width="wrap_content"
                        android:layout_height="242dp"
                        android:layout_gravity="center_horizontal|bottom"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        />


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/id_SecondCardView"
                    android:layout_width="match_parent"
                    android:layout_height="600dp"
                    android:layout_margin="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">


                    <TextView
                        android:id="@+id/id_forearmsStretchexercise"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/forearm_streach"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_margin="30dp"
                        android:src="@drawable/forearm"
                        android:contentDescription="@string/explanation_od_streach_exercise"
                        />

                    <TextView
                        android:id="@+id/idforearmstreach"
                        android:text="@string/bend_your_hand_downward_and_gently_pull_it_toward_you_using_your_other_hand_you_ll_feel_tension_in_the_outside_part_of_your_elbow_and_forearm_this_area_is_where_you_may_experience_repetitive_strain_due_to_typing_on_a_computer_hold_the_stretch_for_15_to_30_seconds"
                        android:layout_width="wrap_content"
                        android:layout_height="242dp"
                        android:layout_gravity="center_horizontal|bottom"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        />
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/id_thirdCardView"
                    android:layout_width="match_parent"
                    android:layout_height="600dp"
                    android:layout_margin="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">


                    <TextView
                        android:id="@+id/id_neckStretchexercise"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:visibility="visible"
                        android:text="@string/neck_streach" />

                    <ImageView
                        android:id="@+id/hipStreach"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_margin="30dp"
                        android:contentDescription="@string/explanation_of_neck_streach_exercise"
                        android:src="@drawable/neckstreach"
                        />

                    <TextView
                        android:id="@+id/id_hipStreachTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="242dp"
                        android:layout_gravity="center_horizontal|bottom"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:text="@string/to_stretch_your_neck_bend_your_head_forward_and_slightly_to_the_right_with_your_right_hand_gently_pull_your_head_downward_you_ll_feel_a_nice_easy_stretch_along_the_back_left_side_of_your_neck"
                        />
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/id_forthCardView"
                    android:layout_width="match_parent"
                    android:layout_height="600dp"
                    android:layout_margin="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <TextView
                        android:id="@+id/id_piriStretchexercis"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:visibility="visible"
                        android:text="@string/Triceps_streach" />

                    <ImageView
                        android:id="@+id/piriStreach"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_margin="30dp"
                        android:contentDescription="@string/explanation_of_triceps_streach_exercise"
                        android:src="@drawable/triceps"
                        />
                    <TextView
                        android:id="@+id/pirifomisTxtVexplanation"
                        android:layout_width="wrap_content"
                        android:layout_height="242dp"
                        android:layout_gravity="center_horizontal|bottom"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:text="@string/extend_your_right_arm_to_the_ceiling_then_bend_at_the_elbow_to_bring_the_right_palm_toward_the_center_of_your_back_resting_your_middle_finger_along_your_spine_use_your_left_hand_to_gently_push_your_elbow_in_toward_the_center_and_down_hold_this_stretch_30_seconds_for_three_to_four_repetitions_on_each_side" />


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/id_fifthCardView"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_margin="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        >


                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/video"
                            android:textSize="24sp"
                            android:textColor="@color/light_blue_A200"
                            android:layout_gravity="center_horizontal"/>

                        <TextView
                            android:id="@+id/vieotxtHyperLink"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:text="@string/https_www_youtube_com_watch_v_bgmnxt88rq8"
                            android:textSize="20sp"
                            android:textColor="@color/light_blue_A200"
                            android:layout_gravity="center_horizontal"
                            android:autoLink="web"
                            android:layout_margin="24sp"
                            />

                        <VideoView
                            android:id="@+id/video_lower_body_videoview"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:layout_gravity="bottom"/>

                    </FrameLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>


        </ScrollView>

